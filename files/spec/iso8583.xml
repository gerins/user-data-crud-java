<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE isopackager SYSTEM "genericpackager.dtd">
<isopackager>
    <!-- Message Type Identifier (MTI) -->
    <isofield id="0" length="4" name="MTI" class="org.jpos.iso.IFA_NUMERIC" />

    <!-- Field 3 - Processing Code -->
    <isofield id="3" length="6" name="ProcessingCode" class="org.jpos.iso.IFA_NUMERIC" />

    <!-- Field 4 - Amount, Transaction -->
    <isofield id="4" length="12" name="AmountTransaction" class="org.jpos.iso.IFA_NUMERIC" />

    <!-- Define the BitMap field (Field 1) -->
    <isofield id="1" length="16" name="BitMap" class="org.jpos.iso.IFA_BITMAP" />

    <!-- Define more fields as needed -->
</isopackager>
